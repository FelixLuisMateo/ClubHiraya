<?php
if (isset($_POST['open_cabins'])) {
    // ✅ Full path to your shaded JAR file
    $jarPath = 'C:\\Users\\ALDRIN REGASPI\\Documents\\NetBeansProjects\\ClubHiraya\\target\\ClubHiraya-1.0-SNAPSHOT-shaded.jar';
    $javaPath = 'C:\\Program Files\\Apache NetBeans\\jdk\\bin\\java.exe';

    // ✅ Run Java silently in background
    $cmd = 'start /B "" "' . $javaPath . '" -jar "' . $jarPath . '"';
    exec($cmd);

    // ✅ Redirect back to employee dashboard (prevents form resubmission)
    header("Location: employee_dashboard.php");
    exit;
}
?>
<form method="post">
    <button type="submit" name="open_cabins">Select Cabins</button>
</form>




