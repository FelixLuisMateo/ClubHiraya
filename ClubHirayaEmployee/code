<?php
if (isset($_POST['open_cabins'])) {
    // Full path to Java and your JAR file
    $java = '"C:\\Program Files\\Apache NetBeans\\jdk\\bin\\java.exe"';
    $jar  = '"C:\\Users\\ALDRIN REGASPI\\Documents\\NetBeansProjects\\ClubHiraya\\target\\ClubHiraya-1.0-SNAPSHOT-shaded.jar"';

